<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script defer src="js/app.js"></script>
    <title>Notes</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <span class="navbar-brand mb-0 h1"><%= user.name %>'s Notes</span>
    </nav>
    <div class="select container-fluid py-4">
      <a href="#" class="badge badge-pill badge-primary p-2 mr-1">All</a>
      <a href="#" class="badge badge-pill badge-primary p-2 mr-1">STEM</a>
      <a href="#" class="badge badge-pill badge-primary p-2 mr-1">Humanities</a>
    </div>
    <main class="container-fluid">
      <ul class="list-group">
        <% user.notes.all.forEach(note => { %>
        <li class="list-group-item">
          <div class="card-body">
            <h5 class="card-title"><%= note.title %></h5>
            <span class="badge badge-pill badge-primary"><%= note.type %></span>
            <p class="card-text">
              <%= note.description %>
            </p>
          </div>
        </li>
        <% }) %>
      </ul>
    </main>
    <form class="container-fluid" id="create-note">
      <div class="form-group">
        <label for="note-title">Title</label>
        <input
          type="note-title"
          class="form-control"
          id="note-title"
          placeholder="Title"
          required
        />
      </div>
      <div class="form-group">
        <label for="subject">Subject</label>
        <select class="form-control" id="subject">
          <option>STEM</option>
          <option>Humanities</option>
        </select>
      </div>
      <div class="form-group">
        <label for="note-text">Note</label>
        <textarea
          class="form-control"
          id="note-text"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Create</button>
    </form>
  </body>
</html>
